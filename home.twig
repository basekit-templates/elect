<!doctype html>
<!--[if lt IE 7]>
	<html class="no-js ie6 oldie" lang="en">
<![endif]-->
<!--[if IE 7]>
	<html class="no-js ie7 oldie" lang="en">
<![endif]-->
<!--[if IE 8]>
	<html class="no-js ie8 oldie" lang="en">
<![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js home-page" lang="{{ page.seoLang }}">
<!--<![endif]-->

<head>
	<meta charset="utf-8" />
	<title>{{ page.title }}</title>
	<meta name="keywords" content="{{ page.keywords }}" />
	<meta name="description" content="{{ page.description }}" />

	{% if site.favicon %}
		<link rel="icon" href="{{ site.favicon['favicon'] }}" type="image/x-icon" />
		<link rel="SHORTCUT ICON" href="{{ site.favicon['thumbnail'] }}?v={{ "now"|date("U") }}" type="image/x-icon" />
	{% endif %}
	<meta name="viewport" content="width=device-width,initial-scale=1">

	{% include basekit.headScript %}
</head>

<body class="{{ page.backgroundClass }}">

	<!-- CONTAINER -->
<div class="template-container">
	<div class="slideshow-home">

		<!-- FULL SCREEN SLIDESHOW -->
		{{widget('responsiveslideshow', 'slideshow', {
			'duration':'5',
			'transSpeed': '4000',
			'transType': 'fade',
			'showButtons': false,
			'showBullets': true,
			'allowPause': false,
			'allowLoop': false,
			'crop': true,
			'images':[
			{
				'imageHeight':'auto',
				'imageWidth':'100%',
				'url':asset('images/slideshow-1.jpg'),
				'title':'Welcome to Ironwork Coffee Co',
        		'description': 'Our new shop is now open in the heart of Old Market'
			},
			{
				'imageHeight':'auto',
				'imageWidth':'100%',
				'url':asset('images/slideshow-2.jpg'),
				'title':'Welcome to Ironwork Coffee Co',
        		'description': 'Our new shop is now open in the heart of Old Market'
			},
			]
		})|raw}}

		<!-- HEADER -->
		{% include "includes/header.twig" %}

	</div>

	<!-- MAIN SECTION -->
	<div role="main" id="main">

		<div class="container">

			<!-- MAIN ZONE -->
			{{zone('main')|raw}}

		</div>

	</div>

	<!-- FOOTER -->
	{% include "includes/footer.twig" %}

</div>
<!-- END CONTAINER -->

{% include basekit.bodyScript %}

<!-- JQUERY -->
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

<!-- PLUGINS -->
<script src="{{asset('js/main.js')}}"></script>

{% block scripts %}
{% endblock %}

</body>
</html>
